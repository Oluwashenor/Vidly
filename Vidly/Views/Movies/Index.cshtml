@model Vidly.ViewModels.IndexMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Movies.Count < 1)
{
    <p>There are no Movies available at the point</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@movie.Name, "Detail", "Customers",
       new
       {
        @movie.Id
       }, null)
                    </td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>


}
